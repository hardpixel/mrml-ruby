#!/usr/bin/env ruby
# frozen_string_literal: true

require 'bundler/inline'
require 'tempfile'

gemfile true, quiet: true do
  source 'https://rubygems.org'
  gemspec

  gem 'benchmark-ips'
  gem 'benchmark-memory'
  gem 'rails'
  gem 'mjml-rails'
end

template = File.read(
  File.join(__dir__, '..', 'test/fixtures/valid.mjml')
)

reports = lambda do |x|
  x.report('mrml') do
    parser = MRML::Template.new(template)
    parser.to_html
  end

  x.report('mjml') do
    parser = Mjml::Parser.new(nil, template)
    parser.render
  end
end

Benchmark.ips do |x|
  reports.call(x)
  x.compare!
end

Benchmark.memory do |x|
  reports.call(x)
  x.compare!
end
